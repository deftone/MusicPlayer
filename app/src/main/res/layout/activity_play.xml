<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLight"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".activity.PlayActivity">

    <!--artist-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/song_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="artist zz"
            android:textColor="@color/white"
            android:textSize="12pt"
            android:textStyle="normal" />

    </LinearLayout>


    <!--albumcover-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="28dp">

        <ImageView
            android:id="@+id/album_cover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:src="@drawable/default_cover" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorLight"
        android:gravity="center|bottom"
        android:orientation="vertical">

        <!--songtitle-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/song_album"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="album zz"
                android:textColor="@color/white"
                android:textSize="8pt"
                android:textStyle="normal" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/song_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="song title xy"
                android:textColor="@color/white"
                android:textSize="10pt"
                android:textStyle="normal" />

        </LinearLayout>


        <!--media buttons-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageButton

                    android:id="@+id/repeatSong_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorLight"
                    android:paddingEnd="30dp"
                    android:src="@drawable/icon_repeat_none" />


                <ImageButton
                    android:id="@+id/play_previous_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorLight"
                    android:paddingEnd="12dp"
                    android:src="@drawable/icon_prev" />


                <ImageButton
                    android:id="@+id/play_pause_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorLight"
                    android:paddingEnd="12dp"
                    android:src="@drawable/icon_pause" />

                <ImageButton
                    android:id="@+id/play_next_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorLight"
                    android:src="@drawable/icon_next" />


                <ImageButton
                    android:id="@+id/shuffle_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorLight"
                    android:paddingStart="30dp"
                    android:src="@drawable/icon_inorder" />

            </TableRow>

        </LinearLayout>

        <!--seekbar and time-->

        <TableRow
            android:id="@+id/seekbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="37dp">


            <TextView
                android:id="@+id/song_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:00"
                android:textColor="@color/white"
                android:textSize="7pt"
                android:textStyle="normal" />


            <SeekBar
                android:id="@+id/seek_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/song_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9:99"
                android:textColor="@color/white"
                android:textSize="7pt"
                android:textStyle="normal" />

        </TableRow>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/range_seekbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <!--seekbar with horizontal padding 30dp-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginHorizontal="@dimen/padding_seekbar"
                android:background="@color/background" />
        </LinearLayout>


        <ImageView
            android:id="@+id/ball"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:src="@drawable/ball" />

        <!--thumb from-->
        <LinearLayout
            android:id="@+id/thumbFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textFromTime"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:background="@color/white"
                android:text="0:30"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="13dp"
                android:src="@drawable/thumb" />

        </LinearLayout>


        <!--thumb to-->
        <LinearLayout
            android:id="@+id/thumbTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textToTime"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:background="@color/white"
                android:text="1:30"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="13dp"
                android:src="@drawable/thumb" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>


